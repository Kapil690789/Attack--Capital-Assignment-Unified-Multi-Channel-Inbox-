generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Users & Authentication
model User {
  id        String     @id @default(cuid())
  email     String     @unique
  name      String?
  image     String?
  password  String?    // Added password field for email/password auth
  role      UserRole   @default(ADMIN)
  emailVerified DateTime?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  // Relations
  teams             TeamMember[]
  contacts          Contact[]
  messages          Message[]
  internalNotes     InternalNote[]
  scheduledMessages ScheduledMessage[]
  activities        Activity[]
  sessions          Session[]

  @@map("users")
}

enum UserRole {
  ADMIN
  EDITOR
  VIEWER
}

// Sessions & Authentication
model Session {
  id        String   @id @default(cuid())
  sessionToken String @unique
  userId    String
  expires   DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// Teams & Collaboration
model Team {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  members  TeamMember[]
  contacts Contact[]
  messages Message[]

  @@map("teams")
}

model TeamMember {
  id        String   @id @default(cuid())
  teamId    String
  userId    String
  role      UserRole @default(EDITOR)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([teamId, userId])
  @@map("team_members")
}

// Contacts & CRM
model Contact {
  id            String   @id @default(cuid())
  teamId        String
  userId        String
  name          String
  email         String?
  phoneNumber   String?
  whatsapp      String?
  twitterHandle String?
  facebookId    String?
  notes         String?
  status        ContactStatus @default(ACTIVE)
  lastMessageAt DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  team     Team            @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user     User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages Message[]
  internalNotes InternalNote[]

  @@unique([teamId, phoneNumber])
  @@unique([teamId, email])
  @@map("contacts")
}

enum ContactStatus {
  ACTIVE
  INACTIVE
  ARCHIVED
}

// Messages - Unified Inbox
model Message {
  id            String   @id @default(cuid())
  teamId        String
  userId        String
  contactId     String
  conversationId String
  channel       MessageChannel
  content       String
  mediaUrl      String?
  mediaType     String? // image, video, audio, document
  status        MessageStatus @default(PENDING)
  direction     MessageDirection // INBOUND or OUTBOUND
  threadId      String? // For grouped conversations
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  readAt        DateTime?

  team      Team       @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  contact   Contact    @relation(fields: [contactId], references: [id], onDelete: Cascade)

  @@index([teamId, contactId])
  @@index([conversationId])
  @@map("messages")
}

enum MessageChannel {
  SMS
  WHATSAPP
  EMAIL
  TWITTER
  FACEBOOK
  INTERNAL
}

enum MessageStatus {
  PENDING
  SENT
  DELIVERED
  READ
  FAILED
}

enum MessageDirection {
  INBOUND
  OUTBOUND
}

// Internal Notes & Collaboration
model InternalNote {
  id        String   @id @default(cuid())
  contactId String
  userId    String
  content   String
  isPrivate Boolean  @default(false)
  mentions  String[] // Array of mentioned user IDs
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  contact Contact @relation(fields: [contactId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("internal_notes")
}

// Message Scheduling
model ScheduledMessage {
  id            String   @id @default(cuid())
  userId        String
  contactId     String?
  channel       MessageChannel
  content       String
  scheduledFor  DateTime
  isRecurring   Boolean  @default(false)
  recurringDays Int? // Bitmask for days of week
  status        ScheduleStatus @default(PENDING)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([scheduledFor, status])
  @@map("scheduled_messages")
}

enum ScheduleStatus {
  PENDING
  SENT
  FAILED
  CANCELLED
}

// Analytics & Engagement
model Analytics {
  id          String   @id @default(cuid())
  teamId      String
  date        DateTime
  messagesSent Int      @default(0)
  messagesReceived Int  @default(0)
  contactsReached Int   @default(0)
  avgResponseTime Float? // In minutes
  openRate    Float?
  createdAt   DateTime @default(now())

  @@unique([teamId, date])
  @@map("analytics")
}

// Activity Log
model Activity {
  id        String   @id @default(cuid())
  userId    String
  action    String
  details   String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@map("activities")
}
